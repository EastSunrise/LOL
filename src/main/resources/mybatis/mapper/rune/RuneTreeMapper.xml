<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wsg.lol.dao.mybatis.mapper.rune.RuneTreeMapper">
    <resultMap id="BaseResultMap" type="wsg.lol.common.pojo.dto.rune.RuneTreeDto">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="key" jdbcType="VARCHAR" property="key"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="icon" jdbcType="VARCHAR" property="icon"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, key, name, icon
    </sql>
    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from r_tree
        where id = #{id,jdbcType=INTEGER}
    </select>

    <delete id="clear">
        delete
        from lol.r_tree
    </delete>
    <insert id="batchInsert" parameterType="wsg.lol.common.pojo.dto.rune.RuneTreeDto">
        insert into lol.r_tree
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.id},
            #{item.key},
            #{item.name},
            #{item.icon})
        </foreach>
    </insert>
</mapper>