<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wsg.lol.dao.mybatis.mapper.rune.RuneMapper">
    <resultMap id="BaseResultMap" type="wsg.lol.common.pojo.dto.rune.RuneDto">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="key" jdbcType="VARCHAR" property="key"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="icon" jdbcType="VARCHAR" property="icon"/>
        <result column="short_desc" jdbcType="VARCHAR" property="shortDesc"/>
        <result column="long_desc" jdbcType="VARCHAR" property="longDesc"/>
        <result column="tree_id" jdbcType="INTEGER" property="treeId"/>
        <result column="num_y" jdbcType="INTEGER" property="numY"/>
        <result column="num_x" jdbcType="INTEGER" property="numX"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, key, name, icon, short_desc, long_desc, series_id, num_y, num_x
    </sql>
    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from r_rune
        where id = #{id,jdbcType=INTEGER}
    </select>

    <delete id="clear">
        delete
        from lol.r_rune
    </delete>

    <insert id="batchInsert">
        insert into lol.r_rune
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.id},
            #{item.key},
            #{item.name},
            #{item.icon},
            #{item.shortDesc},
            #{item.longDesc},
            #{item.treeId},
            #{item.numY},
            #{item.numX})
        </foreach>
    </insert>
</mapper>