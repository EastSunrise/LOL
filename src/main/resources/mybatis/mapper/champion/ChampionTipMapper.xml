<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wsg.lol.dao.mybatis.mapper.champion.ChampionTipMapper">
    <resultMap id="BaseResultMap" type="wsg.lol.common.pojo.dto.champion.ChampionTipDto">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="champion_id" jdbcType="VARCHAR" property="championId"/>
        <result column="tip" jdbcType="VARCHAR" property="tip"/>
        <result column="type" jdbcType="TINYINT" property="type"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, champion_id, tip, type
    </sql>
    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from c_tip
        where id = #{id}
    </select>

    <delete id="clear">
        delete
        from lol.c_tip
    </delete>

    <insert id="batchInsert" useGeneratedKeys="true" parameterType="wsg.lol.common.pojo.dto.champion.ChampionTipDto">
        insert into lol.c_tip (champion_id, tip, type)
        values
        <foreach collection="list" separator="," item="item">
            (#{item.championId},
            #{item.tip},
            #{item.type})
        </foreach>
    </insert>
</mapper>